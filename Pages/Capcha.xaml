<Page x:Class="Trode.Pages.Capcha"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Trode.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Capcha">

    <Grid >
        <StackPanel VerticalAlignment="Center" Width="300">
            <Grid >
                <TextBlock x:Name="CapchaTxt" Margin="15" VerticalAlignment="Top" FontSize="24" HorizontalAlignment="Left" Style="{StaticResource TxtStyle}" TextDecorations="Strikethrough"/>
                <Button x:Name="updateCapcha" Click="updateCapcha_Click" Height="30" Content="Обновить" HorizontalAlignment="Right" Margin="5"  Background="{StaticResource AltColor}"/>
            </Grid>                
            <TextBox x:Name="inputCapcha" Margin="15"/>
            <Button x:Name="SignIn" Click="SignIn_Click" Content="Войти" Margin="15" Background="{StaticResource AltColor}"/>
        </StackPanel>
    </Grid>
</Page>
