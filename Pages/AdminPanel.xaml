<Page x:Class="Trode.Pages.AdminPanel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Trode.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminPanel">

    <Grid>
        <StackPanel Width="300" Height="220">
            <Button Content="Редактировать товары" Margin="15" Padding="3" Background="{StaticResource SecondColor}"/>
            <Button x:Name="AddUsreBtn" Click="AddUsreBtn_Click" Content="Добавить пользователя" Margin="15" Padding="3" Background="{StaticResource SecondColor}"/>
            <Button Content="Редактировать пользователя" Margin="15" Padding="3" Background="{StaticResource SecondColor}"/>
            <Button x:Name="BackLVProduct" Click="BackLVProduct_Click" Content="Назад" Margin="15" Padding="3" Background="{StaticResource SecondColor}"/>
        </StackPanel>
    </Grid>
</Page>
